{
  "name": "woodstock-backup",
  "version": "1.0.0",
  "description": "Backup software",
  "author": "Ulrich Vandenhekke",
  "private": true,
  "license": "MIT",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "console:dev": "ts-node -r tsconfig-paths/register src/console.ts",
    "console": "node dist/console.js",
    "predeb": "npm run build && cd ../client/ && npm run build",
    "deb": "npm run predeb && node-deb -- ./dist/main.js ./dist/ ./config/ ../client/dist/"
  },
  "node_deb": {
    "init": "systemd",
    "dependencies": "btrfs-compsize, btrfs-progs, coreutils, samba-common-bin, rsync, redis-server",
    "templates": {
      "default_variables": "./config/node-deb/default.template",
      "systemd_service": "./config/node-deb/systemd.service.template",
      "executable": "./config/node-deb/executable.template"
    },
    "entrypoints": {
      "daemon": "./dist/main.js",
      "cli": "./dist/console.js"
    },
    "user": "root"
  },
  "dependencies": {
    "@nestjs/bull": "^0.1.2",
    "@nestjs/common": "^7.4.4",
    "@nestjs/config": "^0.5.0",
    "@nestjs/core": "^7.4.4",
    "@nestjs/graphql": "^7.6.0",
    "@nestjs/platform-express": "^7.4.4",
    "@nestjs/serve-static": "^2.1.3",
    "@nestjs/swagger": "^4.6.0",
    "apollo-server-express": "^2.17.0",
    "archiver": "^5.0.1",
    "bull": "^3.18.0",
    "bull-board": "^0.9.0",
    "class-transformer": "^0.3.1",
    "class-validator": "^0.12.2",
    "commander": "^6.1.0",
    "cron-parser": "^2.16.3",
    "file-type": "^15.0.0",
    "graphql": "^15.3.0",
    "graphql-tools": "^6.2.1",
    "js-yaml": "^3.14.0",
    "logform": "^2.2.0",
    "mkdirp": "^1.0.4",
    "nestjs-console": "^3.1.1",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rsync": "^0.6.1",
    "rxjs": "^6.6.3",
    "shelljs": "^0.8.4",
    "swagger-ui-express": "^4.1.4",
    "tmp": "^0.2.1",
    "winston": "^3.3.3",
    "winston-daily-rotate-file": "^4.5.0"
  },
  "devDependencies": {
    "@nestjs/cli": "^7.5.1",
    "@nestjs/schematics": "^7.1.2",
    "@nestjs/testing": "^7.4.4",
    "@types/archiver": "^3.1.0",
    "@types/better-queue": "^3.8.2",
    "@types/bull": "^3.14.2",
    "@types/bull-board": "^0.6.0",
    "@types/express": "^4.17.8",
    "@types/jest": "26.0.13",
    "@types/js-yaml": "^3.12.5",
    "@types/logform": "^1.10.1",
    "@types/mkdirp": "^1.0.1",
    "@types/mock-fs": "^4.10.0",
    "@types/node": "^14.10.0",
    "@types/rsync": "^0.4.30",
    "@types/shelljs": "^0.8.8",
    "@types/supertest": "^2.0.10",
    "@types/tmp": "^0.2.0",
    "@typescript-eslint/eslint-plugin": "^4.1.0",
    "@typescript-eslint/parser": "^4.1.0",
    "eslint": "^7.8.1",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-import": "^2.22.0",
    "jest": "^26.4.2",
    "mock-fs": "^4.13.0",
    "node-deb": "^0.10.7",
    "prettier": "^2.1.1",
    "supertest": "^4.0.2",
    "ts-jest": "26.3.0",
    "ts-loader": "^8.0.3",
    "ts-node": "^9.0.0",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^4.0.2"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
